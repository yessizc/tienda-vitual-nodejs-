<%- include('../../partials/header') %>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

<div class="container" >
  <form action="/registrar" method="post">
    <div class="form-group" >
      <label for="txt"> Referencias</label>
      <input type="Number" name="Referencia" class="form-control" placeholder="Ingrese la referencia" id="Referencia">
    </div>
    <div class="form-group">
      <label for="txt">Nombre producto</label>
      <input type="text" name="Nombre" class="form-control" placeholder="Nombre del proucto" id="Nombre">
    </div>
    <div class="form-group">
      <label for="txt">Descripcion producto</label>
      <input type="text" name="Descripcion" class="form-control" placeholder="Descripcion del proucto" id="Descripcion">
    </div>
    <div class="form-group">
      <label for="txt">Precio</label>
      <input type="text" name="Precio" class="form-control" placeholder="Precio" id="Precio">
    </div>
    <div class="form-group">
      <label for="txt">Stock producto</label>
      <input type="Number" name="Stock" class="form-control" placeholder="Stock del proucto" id="Stock">
    </div>

    <div class="related-widget-wrapper">
      <label for="txt">Estado producto</label><br>
      <select name="Estado" required=""  >
      
        <option selected="">-------- </option>
      
        <option value="1">Activo </option>
      
        <option value="2">Inactivo </option>
      
      </select>
    </div><br>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>